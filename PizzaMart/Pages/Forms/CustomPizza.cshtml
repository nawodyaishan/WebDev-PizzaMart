@model PizzaMart.Pages.Forms.CustomPizza

@{

}

<!DOCTYPE html>

<html lang="eng">
<head>
    <title>Custom Pizza</title>
</head>
<body>
<div class="text-center container">
    <h1>Create Your Own Pizza</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 rounded-5 bg-light pb-5 col-4">
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Give Your Pizza a name....."/> <br/>

        <input type="checkbox" asp-for="Pizza.TomatoesSauce" placeholder="Tomatoes Sauce"/>Tomatoe Sause <br/>
        <input type="checkbox" asp-for="Pizza.Beef" placeholder="Beef"/>Beef<br/>
        <input type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese"/>Cheese <br/>
        <input type="checkbox" asp-for="Pizza.Ham" placeholder="Ham"/>Ham <br/>
        <input type="checkbox" asp-for="Pizza.Mushrooms" placeholder="Mushrooms"/>Mushrooms <br/>
        <input type="checkbox" asp-for="Pizza.Pepperoni" placeholder="Pepperoni"/>Pepperoni <br/>
        <input type="checkbox" asp-for="Pizza.Tuna" placeholder="Tuna"/>Tuna <br/>
        <input type="checkbox" asp-for="Pizza.PineApple" placeholder="Pine Apple"/>Pine Apple <br/>

        <button class="btn btn-primary mt-1" type="submit">
            Order My Pizza
        </button>
    </form>
    <a class="nav-link text-dark" asp-area="" asp-page="/Checkout/Checkout">Checkout</a>
</div>
</body>
</html>